<% provide(:login, logged_in?) %>
<% provide(:user_id, current_user_id) %>

<%= react_component('Home',
                    {login: logged_in?,
                     gravatar: gravatar_for(current_user, size: 50),
                     name: current_user.name,
                     user_id: current_user.id,
                     microposts: feed_data(@feed_items),
                     stats: stats_data(current_user)
                    }) %>
