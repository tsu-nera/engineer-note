<% provide(:title, @user.name) %>
<% provide(:login, logged_in?) %>
<% provide(:user_id, current_user_id) %>

<%= react_component('User',
                    {gravatar: gravatar_for(@user),
                     name: @user.name,
                     user_id: @user.id,
                     microposts: feed_data(@microposts),
                     login: logged_in?,
                     me: current_user.id == @user.id,
                     follow: current_user.following?(@user),
                     unfollow_id: @unfollow_id,
                     stats: stats_data(@user)}) %>
